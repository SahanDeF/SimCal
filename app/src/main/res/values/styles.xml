<?xml version="1.0" encoding="utf-8"?>

<!--Styles is one of those things you can overuse/ underuse.-->
<!--If you use it for everything it becomes a hassle to maintain, but-->
<!--if you don't use it at all, you end up with a lot of redundant code.-->
<!--I'm going to use it for the buttons, but not for the textviews.-->
<resources>
<!--buttonRow has same dimesions as the LinearLayout we just created in activity_main.xml-->
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberAction</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">operationAction</item>
    </style>
</resources>